FROM ubuntu:21.04
ENV PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin \
    LANG=zh_CN.UTF-8 \
    DEBIAN_FRONTEND=noninteractive
RUN apt-get update && \
    && apt-get install -y python3 \
    && apt-get install -y tzdata \
    && apt install -y python3-dev python3-pip \
    && apt install libgl1-mesa-glx -y \
    && apt-get install libglib2.0-0 -y \
    && pip3 install virtualenv \
    git \
    libzbar-dev \
    apt-utils \
    openssl \
    bzip2 \
    sqlite \
    linux-base \
    net-tools \
    tesseract-ocr \
    fortune-mod \
    ffmpeg \
    iputils-ping \
    figlet \
    gdebi \
    redis \
    libxml2-dev \
    libxslt1-dev \
    apt-utils  \
    zlib1g-dev \
    libevent-dev \
    libffi-dev \
    curl \
    wget \
    neofetch \
    sudo \
    gcc \
    imagemagick \
    ffmpeg \
    file \
&& pip3 install dateparser \
&& sed -e 's;^# \(%wheel.*NOPASSWD.*\);\1;g' -i /etc/sudoers \
&& mkdir -p /pagermaid/workdir \    
&& virtualenv -p python3 pagermaid/workdir/.env \
&& /bin/bash -c "source pagermaid/workdir/.env/bin/activate" \
&& git clone -b master https://github.com/xtaodada/PagerMaid-Modify.git /pagermaid/workdir \
&& cd /pagermaid/workdir \
&& pip3 install -r pagermaid/workdir/requirements.txt \
&& apt-get clean \
&& apt-get autoclean \
&& rm -rf /var/lib/apt/lists/*
WORKDIR /pagermaid/workdir
CMD ["sh","utils/docker-run.sh"]