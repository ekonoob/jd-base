FROM ubuntu:20.04
ENV PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin \
    LANG=zh_CN.UTF-8 \
    LC_ALL=C \
    SHELL=/bin/bash \
    PS1="\u@\h:\w \$ " \
    DEBIAN_FRONTEND=noninteractive
SHELL ["/bin/bash", "-c"]
COPY /docker/docker-run.sh /root
RUN source ~/.bashrc \
&& apt-get update \
&& apt-get -y install software-properties-common \
&& add-apt-repository ppa:dawidd0811/neofetch \
&& apt-get -y install tzdata git curl wget zsh python3.6 x11-xserver-utils imagemagick neofetch libzbar-dev redis-server python3-pip \
    fortune-mod \
    gdebi \
    ffmpeg \
    file \
    net-tools \
    iputils-ping \
    iproute2 \
    apt-utils \
    openssl \
    bzip2 \
    sqlite \
    figlet \
    libxml2-dev \
    libxslt1-dev \
    zlib1g-dev \
    libevent-dev \
    libffi-dev \
    gcc \
&& rm /usr/bin/python \
&& ln -s /usr/bin/python3.6 /usr/bin/python \
&& ln -s /usr/bin/pip3 /usr/bin/pip \
&& ln -sf /usr/share/zoneinfo/Asia/Shanghai /etc/localtime \
&& sed -e 's;^# \(%wheel.*NOPASSWD.*\);\1;g' -i /etc/sudoers \
&& mkdir -p /pagermaid/workdir \
&& git clone -b master https://github.com/xtaodada/PagerMaid-Modify.git /pagermaid/workdir \
&& mv -f /root/docker-run.sh /pagermaid/workdir/utils/docker-run.sh \
&& cd /pagermaid/workdir \
&& pip3 install -i https://mirrors.aliyun.com/pypi/simple/ -r requirements.txt \
&& pip3 install pagermaid \
&& apt-get clean \
&& apt-get autoclean \
&& rm -rf /var/lib/apt/lists/*
WORKDIR /pagermaid/workdir
CMD ["sh","utils/docker-run.sh"]